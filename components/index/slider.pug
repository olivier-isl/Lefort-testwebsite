	.container.h-100
		.row.h-100.align-items-center
			header.col-lg-12.position-relative
				div.slideItem.active
					span.badge.badge-secondary.rounded-0 500 à 900T
					h2 Trax
						sup &copy;
				div.slideItem
					span.badge.badge-secondary.rounded-0 300 à 600T
					h2 .Konkest
				div.slideItem
					span.badge.badge-secondary.rounded-0 500 à 1000T
